<section class="todoapp">
	<header class="header">
		<h1><%= @list.name %></h1>
		<%= form_for([@list, @item]) do |f| %>
			<%= f.text_field :description, class: "new-todo", placeholder: (@item.errors.full_messages_for(:description).first || "Add an item"), autofocus:"" %>
		<% end %>
	</header>

	<section class="main">
		<ul class="todo-list">
			<%= render collection: @list.items, partial: 'items/item_li', as: :item %>
    </ul>
	</section>

	<footer class="footer">
	</footer>
</section>

<footer class="info">
	<p><%= link_to "Back", lists_path %> | <%= link_to "Home", root_path %></p>
</footer>
